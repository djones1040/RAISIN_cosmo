SIMLIB_FILE: 3tier_Survey_oneday.SIMLIB 

NGEN_LC: 1000
GENVERSION: ROMAN_NIR
PATH_SNDATA_SIM:  $SCRATCH_SIMDIR
RANSEED: 12945
CIDOFF: 0

# SN models, rates, and intrinsic scatter
GENSOURCE:   RANDOM
GENMODEL:    $RAISIN_ROOT/cosmo/fit/snoopy.B18
#GENMAG_SMEAR_MODELNAME:  OIR.J19

GENRANGE_REDSHIFT:  0.5 0.6
#GENSIGMA_REDSHIFT:  1E-5
# Powerlaws from Lou
DNDZ: POWERLAW2 2.5E-5 1.5 0.0 1.0
DNDZ: POWERLAW2 9.7E-5 -0.5 1.0 3.0

# Filters and exposure times
GENFILTERS:  ZYJH
EXPOSURE_TIME: 1.0
KCOR_FILE: kcor_WFIRST_CYCLE8_IMG_SNooPy.fits


# Selection criteria for generation
SOLID_ANGLE: 0.012754026749049702
GENRANGE_PEAKMJD:  55005.0 55005.0
GENSIGMA_SEARCH_PEAKMJD:  1.0     # sigma-smearing for  SEARCH_PEAKMJD (days)
GENRANGE_TREST:   -10.0     40.0     # rest epoch relative to peak (days)

# Apply triggers using the following files
SEARCHEFF_PIPELINE_FILE:  SEARCHEFF_PIPELINE_WFIRST.DAT
SEARCHEFF_PIPELINE_LOGIC_FILE: SEARCHEFF_PIPELINE_LOGIC.DAT
NEWMJD_DIF: 0.4
APPLY_SEARCHEFF_OPT: 1


# Apply selection cuts
#CUTWIN_TRESTMIN: -19 -5         #at least 1 epoch before -5 d (rest-frame)
#CUTWIN_TRESTMAX: +25 +80        #at least 1 epoch past +30 d
CUTWIN_TRESTMIN: -5 -0
CUTWIN_TRESTMAX: +10 +25
CUTWIN_TGAPMAX:  0   20         #largest Trest gap (days)
CUTWIN_T0GAPMAX: 0   10         #largest Trest gap near peak (days)
APPLY_CUTWIN_OPT: 1

# MW Extinction
OPT_MWEBV: 0

# Smear flags: 0=off, 1=on
SMEARFLAG_FLUX:    1  # photo-stat smearing of signal, sky, etc ...
SMEARFLAG_ZEROPT:  1  # smear zero-point with zptsig

#=========

# Cosmological params for lightcurve generation and redshift distribution
OMEGA_MATTER:  0.3
OMEGA_LAMBDA:  0.7
W0_LAMBDA:    -1.00
H0:           70.0

#=========

# Output in Dump files
SIMGEN_DUMPALL:  25
CID GENTYPE  SNTYPE  NON1A_INDEX  GENZ
LIBID RA DECL MWEBV MU MJD0
SNRMAX SNRMAX2 SNRMAX3
NOBS TRESTMIN TRESTMAX TGAPMAX
S2alpha S2beta S2x0 S2x1 S2c
CUTMASK  SIM_SEARCHEFF_MASK

#=========

FORMAT_MASK:  2  # 2=terse  8=BLIND  16=CIDRAN; 32=FITS

#=========

GENPEAK_STRETCH:   1.23 #0.957
GENRANGE_STRETCH:  0.7  1.175
GENSIGMA_STRETCH:  0.177  0.214

GENPEAK_RV:         3.1               # mean RV to generate
GENSIGMA_RV:        0.001  0.001        # lower,upper guassian-sigmas
GENRANGE_RV:        1.1   4.1         # gen-range for RV

GENRANGE_AV:        0.0   2.00        # CCM89 extinc param range
GENTAU_AV:          0.093            # dN/dAV = exp(-AV/tau)
